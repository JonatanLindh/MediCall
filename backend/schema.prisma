datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator py {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

model Doctor {
  id        String @id @default(cuid())
  firstName String
  lastName  String

  email         String @unique
  password_hash Bytes

  status String

  latitude  Float?
  longitude Float?
}

model Patient {
  id        String @id @default(cuid())
  firstName String
  lastName  String

  email         String @unique
  password_hash Bytes
}
